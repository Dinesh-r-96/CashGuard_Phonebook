<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.zs.register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rname"
        android:layout_below="@+id/textView"
        android:layout_marginTop="69dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:hint="name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rphone"
        android:layout_below="@+id/rname"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:hint="phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remail"
        android:layout_below="@+id/rphone"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/rphone"
        android:hint="email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rdob"
        android:layout_below="@+id/remail"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/remail"
        android:hint="dob" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/rpassword"
        android:layout_above="@+id/rrepassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:hint="pass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/rrepassword"
        android:layout_above="@+id/register"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="83dp"
        android:layout_alignParentRight="true"
        android:hint="repass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/register"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
