<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.zs.mydetails">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/a"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mname"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="61dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:password="false"
        android:inputType="none"
        android:hint="name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/mphone"
        android:layout_below="@+id/mname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:hint="phone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/memail"
        android:layout_below="@+id/mphone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:hint="email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mdob"
        android:layout_below="@+id/memail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:hint="dob" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/mpassword"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:hint="password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/mok"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/mpassword"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/mupdate"
        android:layout_alignTop="@+id/mok"
        android:layout_toRightOf="@+id/a" />

</RelativeLayout>
